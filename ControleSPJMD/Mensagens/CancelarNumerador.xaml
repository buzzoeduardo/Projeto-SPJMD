<Window x:Class="ControleSPJMD.Mensagens.CancelarNumerador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ControleSPJMD.Mensagens"
        mc:Ignorable="d"
        Language="pt-BR"
        Title="CancelarNumerador" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Width="756" Height="242" WindowStyle="None" Icon="/ppjm.png" >
    <Grid>
        <Rectangle Fill="White" Stroke="#FFFAA61A" StrokeThickness="5"/>
        <Grid Margin="10,82,0,83" HorizontalAlignment="Left" Width="102">
            <Grid.Background>
                <ImageBrush ImageSource="/Mensagens/atencao.png" Stretch="Uniform"/>
            </Grid.Background>
        </Grid>
        <Label Content="ATENÇÃO!" HorizontalAlignment="Left" Margin="347,10,0,0" VerticalAlignment="Top" FontFamily="Verdana" FontSize="24" FontWeight="Bold"/>
        <Label Content="Para Anular o numerador:" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Verdana" FontWeight="Bold" Width="606" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Foreground="#FFFAA61A" Margin="117,52,0,0"/>
        <Label Content="1 - Descreva o motivo no campo abaixo e pressione o botão CONFIRMAR." HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Verdana" FontWeight="Bold" Width="606" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Foreground="#FF6374A6" Margin="117,75,0,0"/>
        <Button x:Name="btnConfirmar" Content="CONFIRMAR" HorizontalAlignment="Left" Margin="287,190,0,0" VerticalAlignment="Top" Background="White" Foreground="Black" BorderBrush="Black" TabIndex="2" Width="120" FontWeight="Bold" Cursor="Hand" Click="btnConfirmar_Click" />
        <Button x:Name="btnCancelar" Content="CANCELAR" HorizontalAlignment="Left" Margin="429,190,0,0" VerticalAlignment="Top" Background="White" Foreground="Black" BorderBrush="Black" TabIndex="0" Width="120" FontWeight="Bold" Click="btnFechar_Click" Cursor="Hand" />
        <Label Content="2 - Apenas o usuário que cadastrou o numerador poderar realizar essa operação." HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Verdana" FontWeight="Bold" Width="606" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Foreground="#FF6374A6" Margin="117,97,0,0"/>
        <TextBox x:Name="txtObsCancelaNum" HorizontalAlignment="Left" Margin="117,134,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="606" FontFamily="Verdana" FontWeight="Bold" BorderBrush="#FFD9D9D9" BorderThickness="1,1,1,1" Padding="4,4,4,4" Cursor="Arrow" MaxLength="50" Foreground="Black" TabIndex="1"/>
    </Grid>
</Window>
